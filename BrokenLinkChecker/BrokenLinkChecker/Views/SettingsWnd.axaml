<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
		xmlns:wpf="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
		xmlns:p="clr-namespace:BrokenLinkChecker.LocalizationResources;assembly=BrokenLinkChecker"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="360" Width="500"  Height="360" ShowInTaskbar="False" CanResize="False"
        x:Class="BrokenLinkChecker.Views.SettingsWnd"
        Title="{x:Static p:SettingsRes.WindowTitle}" WindowStartupLocation="CenterOwner">
	<Grid RowDefinitions="Auto,Auto,Auto,Auto" Margin="10" >
		<TextBlock Grid.Row="0" Classes="Headline6" HorizontalAlignment="Left" Text="{x:Static p:SettingsRes.WindowTitle}"/>
		<StackPanel  Grid.Row="1" Margin="0,10,0,0">
			<TextBox HorizontalAlignment="Stretch" UseFloatingWatermark="True" Classes="Outline" wpf:TextFieldAssist.Label="{x:Static p:SettingsRes.UserAgentText}" Text="{Binding UserAgent}"  ></TextBox>
			<TextBox HorizontalAlignment="Stretch"  UseFloatingWatermark="True" Classes="Outline" wpf:TextFieldAssist.Label="{x:Static p:SettingsRes.MaxThreadsText}"    Text="{Binding MaxThreads}"    ></TextBox>
		</StackPanel>
		<StackPanel  Grid.Row="2" Margin="0,10,0,0">
			<TextBlock Classes="Headline6" HorizontalAlignment="Left" Text="{x:Static p:SettingsRes.DelayTitle}"/>
			<TextBox HorizontalAlignment="Stretch" UseFloatingWatermark="True" Classes="Outline" wpf:TextFieldAssist.Label="{x:Static p:SettingsRes.DelayMin}" Text="{Binding DelayMin}"  ></TextBox>
			<TextBox HorizontalAlignment="Stretch"  UseFloatingWatermark="True" Classes="Outline" wpf:TextFieldAssist.Label="{x:Static p:SettingsRes.DelayMax}"    Text="{Binding DelayMax}"    ></TextBox>
		</StackPanel>

		<StackPanel Margin="0,10,0,0" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Command="{Binding Accept}"   Content="{x:Static p:CommonRes.Acept}"/>
			<Button Margin="5,0,0,0" Command="{Binding Cancel}"    Content="{x:Static p:CommonRes.Cancel}"/>
		</StackPanel>
	</Grid>
</Window>
